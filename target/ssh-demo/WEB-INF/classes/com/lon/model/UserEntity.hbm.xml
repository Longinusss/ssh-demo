<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="com.lon.model.UserEntity" table="user" schema="test">
        <id name="id">
            <column name="id" sql-type="int(5)"/>
        </id>
        <property name="name">
            <column name="name" sql-type="varchar(10)" length="10" not-null="true"/>
        </property>
        <property name="password">
            <column name="password" sql-type="varchar(10)" length="10" not-null="true"/>
        </property>
        <property name="remark">
            <column name="remark" sql-type="varchar(50)" length="50" not-null="true"/>
        </property>
    </class>
</hibernate-mapping>